@model GetDoctorByIdViewModel
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Dashboard/_AdminDashboard.cshtml";
}

<h1>Delete</h1>

<form asp-action="Delete">


    <div class="doctor-profile-card">
        <div class="doctor-profile-image">
            <img src="https://cdn-dr-images.vezeeta.com/Assets/Images/SelfServiceDoctors/ENTf0767c/Profile/150/doctor-ahmed-abd-el-bary-urology_20190125212459768.jpg" alt="Doctor Ahmed Abdelbary">
        </div>
        <div class="doctor-profile-details">
            <h2 class="doctor-name">Doctor: @Model.FirstName @Model.LastName</h2>
            <h3 class="doctor-title">Professor of @Model.Speciality</h3>
            <p class="doctor-specialties">
                Specialized in
                <a href="#">@Model.Speciality</a>

            </p>
            <p class="doctor-rating">
                Degree:
                <span class="rating-value">@Model.Degree</span>
            </p>
            <p class="doctor-reviews">@Model.AboutTheDoctor</p>
            <p class="doctor-reviews">@Model.Certificate</p>
            <p>Years of experience: @Model.YearsOfExperience</p>

            <div class="doctor-recommendation">
                <p>Age: @Model.Age</p>
                <p>Phone number: @Model.ApplicationUser.PhoneNumber</p>
                <p>Gender: @Model.Gender</p>
                <p>Total rating: @Model.TotalRatings</p>

            </div>
            <div class="container mt-5">
                <div class="row">
                    <div class="col-md-6">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <label class="input-group-text" for="clinicDropdown" style="background-color: #5D87FF; color:white;">Doctor's Clinics:</label>
                            </div>
                            <select class="custom-select" id="clinicDropdown" onchange="location = this.value;">
                                <option selected value="#">Choose...</option>
                                @foreach (var clinic in Model.Clinics)
                                {
                                    <option value="@clinic.Id">@clinic.Name</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="col-md-6 mt-3 mt-md-0">
                        <div class="text-md-right">
                            <a asp-controller="DoctorAdmin" asp-action="Index" class="btn btn-primary" style="background-color: #5D87FF;">Back to list</a>
                        </div>
                    </div>
                </div>
            </div>



        </div>


        <div class="col-md-6 mt-3 mt-md-0">
            <div class="text-md-right">
                <input type="submit" class="btn btn-primary" style="background-color: #5D87FF;" value="Delete" />
                <input asp-for="Id" type="hidden" />
                <input asp-for="FirstName" type="hidden" />
                <input asp-for="LastName" type="hidden" />
                <input asp-for="AboutTheDoctor" type="hidden" />
                <input asp-for="Age" type="hidden" />
                <input asp-for="Gender" type="hidden" />
                <input asp-for="TotalRatings" type="hidden" />
                <input asp-for="Certificate" type="hidden" />
                <input asp-for="Degree" type="hidden" />
                <input asp-for="YearsOfExperience" type="hidden" />
            </div>
        </div>


    </div>
</form>